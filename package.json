    "@koa/router": "^10.0.0",
    "awilix": "^4.3.4",
    "dotenv": "^10.0.0",
    "koa": "^2.13.1",
    "koa-body": "^4.2.0",
    "koa-bodyparser": "^4.3.0",
    "koa-mount": "^4.0.0",
    "nanoid": "^3.1.23",
    "winston": "^3.3.3",
    "yup": "^0.32.9"
  },
  "_moduleAliases": {
    "~root": "src"
  },
