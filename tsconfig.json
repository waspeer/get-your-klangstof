{
  "extends": "./node_modules/poetic/config/typescript/tsconfig.json",
  "include": ["src/**/*", "tests/**/*"],
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": ["es2020"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "es2019",
    "baseUrl": "src",
    "paths": {
      "~root/*": ["./*"]
    }
  },
  "ts-node": {
    "files": true
  }
}
